<div class="row">
    <div class="col-md-10">
        <div class="jumbotron">
            <h1 class="display-4">Hello !</h1>
            <p class="lead">Nexus Builder for your next Media.</p>
            <hr class="my-4">

            <p class="lead">
                <a class="btn btn-primary btn-lg" href="/media/newMedia" role="button">Add Media</a>

            </p>

        </div>
    </div>

    <div class="col-md-8">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Tags <span class="badge badge-pill badge-primary"> 2 </span>
            </div>

            <ul class="list-group list-group-flush">
                {{#each tag}}
                <li class="list-group-item"> {{title}} (M)
                    <span>
                        <form method="POST" action="/{{id}}?_method=DELETE">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="submit" class="btn btn-danger btn-block" value="Delete">
                        </form>
                    </span>
                </li>

                {{else}}
                <p>No tags listed</p>
                {{/each}}
            </ul>

        </div>
        <br>
        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter">
            New Tag
        </button>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Nouvelle Tag</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/tag/newTag" method="POST">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Title</label>
                        <input type="text" class="form-control" name="title" placeholder="Nice Master tag">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlInput1">Color</label>
                        <div id="cp2" class="input-group colorpicker-component">
                            <input type="text" value="#00AABB" name="color" class="form-control" />
                            <span class="input-group-addon">
                                <i></i>
                            </span>
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="master">Master Tag ?</label>
                        <input type="checkbox" class="form-control" name="master" checked>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



<script>
    jQuery(document).ready(function () {
        $('#cp2').colorpicker({});
    });
</script>